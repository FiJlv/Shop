@model ShopCartDTO

<div class="container">
    
    @foreach(var el in Model.ShopCartService.ListShopItems)
    {
        <div class="alert alert-light" mt-3>
            <b>Car:</b> @el.Car.Name<br />
            <b>Price:</b> @el.Car.Price $
            <a class="link-danger" href="/ShopCart/RemoveFromCart?id=@el.Id">Delete</a>
        </div>    
    }

    @if (User.Identity.IsAuthenticated)
    {
        <a class="myBtn" asp-controller="Order" asp-action="CheckoutForAuthenticatedUser" asp-route-name="@User.Identity.Name">Pay</a>
    }
    else if (!User.Identity.IsAuthenticated)
    {
        <a class="myBtn" asp-controller="Order" asp-action="Checkout">Pay</a>
    }    

</div>