@model Shop.Data.Models.Car

<div>
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <p>Price: @Model.Price $</p>
    <p><a class="btn" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.Id">Add to cart</a></p>
</div>